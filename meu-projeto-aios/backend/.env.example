# ===========================
# Backend Environment Variables
# ===========================

# Server
NODE_ENV=development
PORT=3000

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Security & CORS
CORS_ORIGIN=http://localhost:5173,https://yourdomain.com
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Data Adapters Configuration

# Zoho CRM
ZOHO_CRM_ENABLED=false
ZOHO_CRM_CLIENT_ID=your-client-id
ZOHO_CRM_CLIENT_SECRET=your-client-secret
ZOHO_CRM_REDIRECT_URI=http://localhost:3000/oauth/zoho/callback
ZOHO_CRM_API_DOMAIN=https://www.zohoapis.com

# Google Sheets
GOOGLE_SHEETS_ENABLED=false
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id
GOOGLE_SHEETS_API_KEY=your-api-key

# Accounting System
ACCOUNTING_SYSTEM_ENABLED=false
ACCOUNTING_API_URL=https://api.accounting-system.com
ACCOUNTING_API_KEY=your-api-key

# Cron Jobs (schedule format)
CRON_METRICS_AGGREGATION=59 23 * * *
CRON_AI_INSIGHTS=0 8 * * *
CRON_ZOHO_SYNC=0 */4 * * *
CRON_SHEETS_SYNC=0 */6 * * *
CRON_ACCOUNTING_SYNC=0 */8 * * *

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
